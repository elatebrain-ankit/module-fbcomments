<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <ebfbcomments>
            <general>
                <enabled>1</enabled>
                <tab_title><![CDATA[Facebook Comments]]></tab_title>
                <comments_per_page>5</comments_per_page>
            </general>
            <display>
                <box_width>100%</box_width>
                <color_scheme>light</color_scheme>
                <default_order>reverse_time</default_order>
            </display>
        </ebfbcomments>
    </default>
</config>
